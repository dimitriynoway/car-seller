{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "target": "es2021",
    "lib": ["es2021"],
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    // "paths": {
    //   "@common/*": ["common/*"],
    //   "@config/*": ["config/*"],
    //   "@database/*": ["database/*"],
    //   "@models/*": ["models/*"],
    //   "@modules/*": ["modules/*"],
    //   "@repositories/*": ["repositories/*"],
    //   "@utils/*": ["utils/*"],
    //   "@workers/*": ["workers/*"]
    // },
    "incremental": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "preserveSymlinks": true
  }
}
